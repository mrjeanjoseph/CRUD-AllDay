@page
@model AdventureWorks.HumanResources.Pages.Departments.IndexModel
@inject AdventureWorks.HumanResources.Services.DepartmentService DepartmentService

<h1 class="text-center mb-4">Departments</h1>
<a asp-page="./Create" class="btn btn-primary mb-3">Add New Department</a>

<div class="table-responsive shadow-lg rounded">
    <table id="departmentsTable" class="table table-hover table-striped table-bordered align-middle">
        <thead class="table-dark">
            <tr>
                <th>Department ID</th>
                <th>Name</th>
                <th>Group Name</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var department in Model.Departments)
            {
                <tr>
                    <td>@department.DepartmentId</td>
                    <td>@department.Name</td>
                    <td>@department.GroupName</td>
                    <td class="text-center">
                        <div class="d-flex justify-content-center gap-1">
                            <a class="btn btn-secondary btn-sm px-2" asp-page="./Detail" asp-route-id="@department.DepartmentId">Detail</a>
                            <a class="btn btn-warning btn-sm px-2" asp-page="./Edit" asp-route-id="@department.DepartmentId">Edit</a>
                            <a class="btn btn-danger btn-sm px-2" asp-page="./Delete" asp-route-id="@department.DepartmentId">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            new DataTable('#departmentsTable');
        });
    </script>
}
