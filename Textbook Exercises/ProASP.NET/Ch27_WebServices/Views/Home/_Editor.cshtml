@model Ch27_WebServices.Models.Reservation

<div class="card-header">Create Reservation</div>
<div class="card-body">
    @using(Html.BeginForm("AddNewReservation", "Home")) {
        <div class="mb-3">
            <label>Client Name</label>
            @Html.TextBoxFor(m => m.ClientName, new {@class = "form-control" })
        </div>
        <div class="mb-3">
            <label>Location</label>
            @Html.TextBoxFor(m => m.ReservedLocation, new {@class = "form-control" })
        </div>
        <button type="submit" class="btn btn-primary">Save Reservation</button>
    }
</div>