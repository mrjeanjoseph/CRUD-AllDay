@model Ch21_HelperMethods.Models.Person

@{
    ViewBag.Title = "CreatePerson";
}

<h2>Create Person</h2>

@using(Html.BeginRouteForm("FormRoute", 
    new {}, FormMethod.Post, 
    new {@class="personClass", data_formType="person"})){ 

    <div class="dataElem">
        <label>Person Id</label>
        @Html.TextBoxFor(x => x.PersonId)
    </div>
    <div class="dataElem">
        <label>First Name</label>
        @Html.TextBoxFor(x => x.FirstName)
    </div>
    <div class="dataElem">
        <label>Last Name</label>
        @Html.TextBoxFor(x => x.LastName)
    </div>
    <div class="dataElem">
        <label>Role</label>
        @Html.DropDownListFor(x => x.Role, 
                new SelectList(Enum.GetNames(typeof(Ch21_HelperMethods.Models.Role))))
    </div>
    <input type="submit" value="Submit" />
}