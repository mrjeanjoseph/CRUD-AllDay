@using IdentityApiSupport.Models
@using IdentityApiSupport.Infrastructure
@model  IEnumerable<AppRole>
@{ ViewBag.Title = "Roles"; }

<div class="card text-bg-secondary">
    <h3 class="card card-header text-center">Display All Roles</h3>
    <table class="table table-striped">
        <tr><th>ID</th><th>Name</th><th>Users</th><th>Actions</th></tr>
        @if (Model.Count() == 0) {
            <tr><td colspan="4" class="text-center">No Roles</td></tr>
        }
        else {
            foreach (AppRole role in Model) {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>
                    <td>
                        @if (role.Users == null || role.Users.Count == 0) {
                            @: No Users in Role
                        } else {
                            <p>@string.Join(", ", role.Users.Select(x => Html.GetUserName(x.UserId)))</p>
                        }
                    </td>
                    <td>
                        @using (Html.BeginForm("Delete", "RoleAdmin",
                            new { id = role.Id})) {
                            @Html.ActionLink("Edit", "Edit", new { id = role.Id},
                            new { @class = "btn btn-primary btn-sm"})
                        <button class="btn btn-danger btn-sm" type="submit">Delete</button>
                         }
                    </td>
                </tr>
            }
        }
    </table>
</div>
@Html.ActionLink("Create", "Create", null, new { @class= "btn btn-outline-secondary mt-3"})