@model IdentityApiSupport.Models.LoginModel
@{ ViewBag.Title = "Login"; }
<h2>Log In</h2>

@Html.ValidationSummary()

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken();

    <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />
    <div class="mb-3">
        <label>Name</label>
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    </div>
    <div class="mb-3">
        <label>Password</label>
        @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })
    </div>

    <input type="submit" value="Log In" class="btn btn-outline-secondary" />
}

@using (Html.BeginForm("GoogleLogin", "Account")) {
    <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />
    <button class="btn btn-primary" type="submit">Log In via Google</button>
}