@using IdentityApiSupport.Models
@model AppUser
@{ ViewBag.Title = "UserProperties"; }

<div class="card text-bg-light mb-3">
    <div class="card-header text-center">Custom User Properties</div>
    <table class="table table-striped table-light">
        <tr><td>City</td><td>@Model.City</td></tr>
        <tr><td>City</td><td>@Model.Country</td></tr>
    </table>
</div>

@using (Html.BeginForm()) {
    <div class="mb-3">
        <Label>City: </Label>
        @Html.DropDownListFor(x => x.City, new SelectList(Enum.GetNames(typeof(Cities))), new {@class="form-control"})
    </div>
    <input type="submit" value="Save" class="btn btn-outline-primary" />
}