@model IdentityApiSupport.Models.CreateModel

@{
    ViewBag.Title = "Create";
}

<h2>Create User</h2>

@Html.ValidationSummary(false)
@using (Html.BeginForm())
{
    <div class="mb-3">
        <label>Name:</label>
        @Html.TextBoxFor(n => n.FullName, new { @class = "form-control" })
    </div>
    <div class="mb-3">
        <label>Email:</label>
        @Html.TextBoxFor(n => n.Email, new { @class = "form-control" })
    </div>
    <div class="mb-3">
        <label>Password:</label>
        @Html.PasswordFor(n => n.Password, new { @class = "form-control" })
    </div>

    <input type="submit" value="Create" class="btn btn-outline-secondary" />
    @Html.ActionLink("Go Back", "Index", "Admin", null, new { @class = "btn btn-outline-danger" })
}