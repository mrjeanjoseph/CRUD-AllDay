@model Enum

@Html.DropDownListFor(e => e, Enum.GetNames(Model.GetType())
    .Cast<Enum>().Select(e => {
        string enumVal = Enum.GetName(Model.GetType(), e);
        return new SelectListItem() {
            Selected = (Model.ToString() == enumVal),
            Text = enumVal,
            Value = enumVal
        };
    }))
    