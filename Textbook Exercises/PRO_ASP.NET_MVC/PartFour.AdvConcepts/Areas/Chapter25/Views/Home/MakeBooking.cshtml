@model Chapter25.ModelValidation.Models.Appointment

@{
    ViewBag.Title = "Make a Booking";
}

<h2>Book an Appointment</h2>


@using(Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <p>Your Name: @Html.EditorFor(m => m.ClientName)</p>
    <p>@Html.ValidationMessageFor(m => m.ClientName)</p>

    <p>Appointment Date: @Html.EditorFor(m => m.AppointmentDate)</p>
    <p>@Html.ValidationMessageFor(m => m.AppointmentDate)</p>

    <p>@Html.EditorFor(m => m.TermsAndConditionsAccepted) I accept the terms & conditions</p>
    <p>@Html.ValidationMessageFor(m => m.TermsAndConditionsAccepted)</p>

    <input type="submit" value="Make Booking"/>
}