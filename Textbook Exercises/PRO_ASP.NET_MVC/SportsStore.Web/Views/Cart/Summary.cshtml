@model SportsStore.Domain.Cart
    @{ 
        string summaryTitle = "Merchandise";
    }







<div class="hstack gap-3">
    <div class="p-2 d-none d-sm-block"><h1>@summaryTitle</h1></div>

    <div class="p-2 ms-auto">
        <b class="d-none d-sm-block">Your Cart:</b>
        @Model.Lines.Sum(x => x.Quantity) item(s),
        @Model.ComputeTotalValue().ToString("c")
    </div>

    <div class="p-2">
        @Html.ActionLink("Checkout", "Index", "Cart",
    new { returnUrl = Request.Url.PathAndQuery },
    new { @class = "btn btn-secondary navbar-btn" })
    </div>
</div>