
@model IEnumerable<string>

@{ 
    string categoryBtnStyling = "btn mb-3 d-grid gap-2 btn-secondary btn-lg";
}


@Html.ActionLink("Home", "List", "Merch", null, new { @class = categoryBtnStyling })

@foreach (var link in Model) {
    @Html.RouteLink(link, new {
        controller = "Merch",
        action = "List",
        category = link,
        page = 1 
}, new { @class = categoryBtnStyling })
}