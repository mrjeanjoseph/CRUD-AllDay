<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @{ string applicationName = "Sports Store";}
    <title>@ViewBag.Title - @applicationName.Replace(" ", "")</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body>

    @Html.Partial("_NavHeader", applicationName)

    <div class="card container mt-2">
            @Html.Action("Summary", "Cart")
        <div class="card-body">
            <div class="row">
                <div id="categories" class="col-sm-2">
                    @Html.Action("Menu", "Nav")
                </div>
                <div class="col-sm-10">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    @{ string myInfo = "Jean Built this!";}
    <nav class="navbar fixed-bottom bg-body-tertiary">
        <div class="container-fluid">
            <p>&copy; @DateTime.Now.Year - @myInfo</p>
        </div>
    </nav>

    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/jquery-3.7.1.slim.min.js"></script>
</body>

</html>