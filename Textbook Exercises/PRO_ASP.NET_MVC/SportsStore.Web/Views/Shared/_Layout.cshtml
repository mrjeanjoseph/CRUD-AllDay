<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @{ string applicationName = "Sports Store";}
    <title>@ViewBag.Title - @applicationName.Replace(" ", "")</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    @Html.Partial("_NavHeader", applicationName)

    <div class="card container mt-2">
        @Html.Action("Summary", "Cart")
        <div class="d-block d-md-none">
            @Html.Action("Menu", "Nav", new { horizontalLayout = true })
        </div>
        <div class="card-body">
            <div class="row">
                <div id="categories" class="col-md-3 d-none d-md-block">
                    @Html.Action("Menu", "Nav")
                </div>
                <div class="col-sm-12 col-md-9">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    @{ string myInfo = "Jean Built this!";}
    <nav class="navbar fixed-bottom bg-body-tertiary">
        <div class="container-fluid">
            <p>&copy; @DateTime.Now.Year - @myInfo</p>
        </div>
    </nav>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/global")
    @RenderSection("scripts", required: false)
</body>

</html>