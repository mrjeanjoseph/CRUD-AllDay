@model Chapter2.GuestResponse

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>RSVP Form</title>
</head>
<body>
    <h2>Please make a reservation</h2>

    @using(Html.BeginForm()) {

        @Html.ValidationSummary()

        <p>Your Name: @Html.TextBoxFor(n => n.FullName)</p>
        <p>Your Email: @Html.TextBoxFor(e => e.EmailAddress)</p>
        <p>Your Phone: @Html.TextBoxFor(p => p.PhoneNumber)</p>
        <p>Will you attend? @Html.DropDownListFor(c => c.WillAttend, new[] {
                new SelectListItem() {
                    Text = "Yes, I'll be there",
                    Value = bool.TrueString
                },
                new SelectListItem() {
                    Text = "No way - Jose!",
                    Value = bool.FalseString
                }
            }, "Please make a selection")
        </p>
        <input type="submit" value="Submit RSVP" />
     }
</body>
</html>
