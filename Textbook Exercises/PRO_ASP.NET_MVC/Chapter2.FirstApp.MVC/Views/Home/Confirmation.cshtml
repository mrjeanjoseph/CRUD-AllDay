@model Chapter2.GuestResponse

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Confirmation</title>
</head>
<body>
    <h1>Thank you, @Model.FullName</h1>
    @if(Model.WillAttend == true) {
        @:It's great that you're coming. The drinks are already in the fridge!
    } else {
        @:Sorry to hear that you can't make it, but thanks for letting me us know.
    }
</body>
</html>
