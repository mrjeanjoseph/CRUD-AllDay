@using WorkingWithRazor.Models
@model Product[]

@{
    ViewBag.Title = "Demo Array";
}

<h2>Demo Array</h2>

@if (Model.Length > 0) {
    <table>
        <thead>
            <tr>
                <th>Product</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Product product in Model) {
                <tr>
                    <td>@product.Name</td>
                    <td>@string.Format("{0:c}", @product.Price)</td>
                </tr>
            }
        </tbody>
    </table>
} else {
    <h2>No Product Data-</h2>
}