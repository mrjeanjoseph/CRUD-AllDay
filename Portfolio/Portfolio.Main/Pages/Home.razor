@page "/"

<PageTitle>Jean-Joseph - Software Engineer Portfolio</PageTitle>

<!-- Hero Section -->
<div class="hero-section bg-primary text-white py-5 mb-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="display-4 fw-bold">Welcome, I'm Jean-Joseph</h1>
                <h2 class="h4 mb-3">Software Engineer</h2>
                <p class="lead mb-4">.NET Developer specializing in Angular, React, SQL Server, and Azure Cloud Solutions</p>
                <div class="d-flex gap-3 flex-wrap">
                    <span class="badge bg-light text-dark fs-6 px-3 py-2">.NET Core</span>
                    <span class="badge bg-light text-dark fs-6 px-3 py-2">Angular</span>
                    <span class="badge bg-light text-dark fs-6 px-3 py-2">React</span>
                    <span class="badge bg-light text-dark fs-6 px-3 py-2">SQL Server</span>
                    <span class="badge bg-light text-dark fs-6 px-3 py-2">Azure cloud</span>
                </div>
            </div>
            <div class="col-md-4 text-center">
                <div class="profile-image-container">
                    <img src="https://mrjeanjoseph.github.io/src/img/portrait2.jpg" 
                         alt="Head shot image of Frednel Jean-Joseph" 
                         class="rounded-circle img-fluid shadow-lg profile-image">
                </div>
            </div>
        </div>
    </div>
</div>

<!-- About Section -->
<div class="container mb-5">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <h3 class="text-center mb-4">About Me</h3>
            <p class="text-center text-muted">
                Passionate software engineer with 5+ years of experience building scalable web applications. 
                I specialize in full-stack development using modern technologies and cloud platforms. 
                Always eager to learn new technologies and solve complex problems with elegant solutions.
            </p>
        </div>
    </div>
</div>

<!-- Featured Projects Section -->
<div class="container mb-5">
    <h3 class="text-center mb-5">Featured Projects</h3>
    <div class="row g-4">
        @foreach (var project in FeaturedProjects)
        {
            <div class="col-lg-4 col-md-6">
                <div class="card h-100 shadow-sm project-card">
                    <div class="card-body d-flex flex-column">
                        <div class="d-flex align-items-center mb-3">
                            <div class="project-icon me-3">
                                <i class="@project.IconClass"></i>
                            </div>
                            <h5 class="card-title mb-0">@project.Title</h5>
                        </div>
                        <p class="card-text flex-grow-1">@project.Description</p>
                        <div class="mb-3">
                            @foreach (var tech in project.Technologies)
                            {
                                <span class="badge bg-secondary me-1 mb-1">@tech</span>
                            }
                        </div>
                        <div class="mt-auto">
                            <button class="btn btn-outline-primary me-2" disabled>
                                <i class="bi bi-eye"></i> View Demo
                            </button>
                            <button class="btn btn-outline-secondary" disabled>
                                <i class="bi bi-github"></i> Source Code
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Skills Section -->
<div class="bg-light py-5">
    <div class="container">
        <h3 class="text-center mb-5">Technical Skills</h3>
        <div class="row">
            <div class="col-md-3 mb-4">
                <h5><i class="bi bi-code-square text-primary me-2"></i>Frontend</h5>
                <ul class="list-unstyled">
                    <li>• Angular 15+</li>
                    <li>• React.js</li>
                    <li>• TypeScript</li>
                    <li>• Bootstrap</li>
                    <li>• Blazor</li>
                </ul>
            </div>
            <div class="col-md-3 mb-4">
                <h5><i class="bi bi-server text-primary me-2"></i>Backend</h5>
                <ul class="list-unstyled">
                    <li>• .NET 6/7/8</li>
                    <li>• ASP.NET 4.8</li>
                    <li>• ASP.NET Core</li>
                    <li>• Web API</li>
                    <li>• Entity Framework</li>
                </ul>
            </div>
            <div class="col-md-3 mb-4">
                <h5><i class="bi bi-database text-primary me-2"></i>Database</h5>
                <ul class="list-unstyled">
                    <li>• SQL Server</li>
                    <li>• Azure SQL</li>
                    <li>• CosmosDB</li>
                    <li>• Redis Cache</li>
                    <li>• Entity Framework</li>
                </ul>
            </div>
            <div class="col-md-3 mb-4">
                <h5><i class="bi bi-cloud text-primary me-2"></i>Cloud & DevOps</h5>
                <ul class="list-unstyled">
                    <li>• Azure App Service</li>
                    <li>• Azure Functions</li>
                    <li>• Azure DevOps</li>
                    <li>• Docker</li>
                    <li>• Git/GitHub</li>
                </ul>
            </div>
        </div>
    </div>
</div>

