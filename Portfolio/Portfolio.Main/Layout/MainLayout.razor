@inherits LayoutComponentBase
@inject IJSRuntime JSRuntime

<div class="page" id="app-container">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <div class="d-flex justify-content-end align-items-center w-100 gap-3">
                <button class="btn btn-sm btn-outline-secondary border-0 dark-mode-toggle" @onclick="ToggleDarkMode"
                    title="Toggle dark mode">
                    <i class="bi @(isDarkMode ? "bi-sun-fill" : "bi-moon-fill")"></i>
                    <span class="ms-1 d-none d-md-inline">@(isDarkMode ? "Light" : "Dark")</span>
                </button>

                <!-- More about me dropdown -->
                <div class="dropdown">
                    <button class="btn btn-sm btn-outline-primary dropdown-toggle" type="button"
                        id="moreAboutMeDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-person-circle me-1"></i>More about me
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="moreAboutMeDropdown">
                        <li>
                            <button class="dropdown-item" type="button" @onclick="ShowCvModal">
                                <i class="bi bi-file-earmark-person me-2"></i>Get CV
                            </button>
                        </li>
                        <li>
                            <button class="dropdown-item" type="button" @onclick="ShowCertsModal">
                                <i class="bi bi-award me-2"></i>Get Certifications
                            </button>
                        </li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li>
                            <a class="dropdown-item" href="https://github.com/mrjeanjoseph" target="_blank">
                                <i class="bi bi-github me-2"></i>Visit GitHub
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <article class="content px-4">
            @Body
        </article>

        <!-- CV Modal -->
        <Modal Show="@showCvModal" Title="Resume (PDF)" WidthCss="75vw" OnClose="CloseCvModal">
            <HeaderActions>
                @if (!string.IsNullOrWhiteSpace(activePdfPath))
                {
                    <a class="btn btn-sm btn-outline-light" href="@activePdfPath" target="_blank" download>
                        <i class="bi bi-download me-1"></i>Download
                    </a>
                }
            </HeaderActions>
            <ChildContent>
                <object class="doc-viewer" data="@activePdfPath" type="application/pdf">
                    <div class="p-3">
                        <h6 class="mb-2">Unable to display PDF.</h6>
                        <p class="mb-2">
                            @if (string.IsNullOrWhiteSpace(activePdfPath))
                            {
                                <span>No PDF path configured. Expected at <code>/assets/resume.pdf</code>.</span>
                            }
                            else
                            {
                                <span>Ensure the file exists at <code>@activePdfPath</code> under
                                    <code>wwwroot</code>.</span>
                            }
                        </p>
                        @if (!string.IsNullOrWhiteSpace(activePdfPath))
                        {
                            <a class="btn btn-sm btn-primary" href="@activePdfPath" target="_blank">
                                <i class="bi bi-box-arrow-up-right me-1"></i>Open in new tab
                            </a>
                        }
                    </div>
                </object>
            </ChildContent>
        </Modal>

        <!-- Certifications Modal -->
        <Modal Show="@showCertsModal" Title="@CertsModalTitle" WidthCss="75vw" OnClose="CloseCertsModal">
            <HeaderActions>
                @if (viewingCert && selectedCert is not null)
                {
                    @if (!string.IsNullOrWhiteSpace(selectedCert.PdfPath))
                    {
                        <a class="btn btn-sm btn-outline-light" href="@selectedCert.PdfPath" target="_blank" download>
                            <i class="bi bi-download me-1"></i>Download
                        </a>
                    }
                    <button class="btn btn-sm btn-outline-light" @onclick="BackToCertsGrid">
                        <i class="bi bi-arrow-left me-1"></i>Back
                    </button>
                }
            </HeaderActions>
            <ChildContent>
                @if (!viewingCert)
                {
                    <div class="cert-grid">
                        @foreach (CertificationItem c in certs)
                        {
                            <div class="cert-card" @onclick="() => SelectCert(c)">
                                <img class="cert-thumb" src="@c.ThumbPath" alt="@c.Title" />
                                <div class="cert-caption">@c.Title</div>
                            </div>
                        }
                    </div>
                }
                else if (selectedCert is not null)
                {
                    @if (string.IsNullOrWhiteSpace(selectedCert.PdfPath))
                    {
                        <iframe class="doc-viewer" src="@skillsoftWalletUrl"></iframe>
                    }
                    else
                    {
                        <object class="doc-viewer" data="@selectedCert.PdfPath" type="application/pdf">
                            <iframe class="doc-viewer" src="@skillsoftWalletUrl"></iframe>
                        </object>
                    }
                }
            </ChildContent>
        </Modal>

        <!-- Back to Top Button -->
        <!-- JeanAI Chatbot -->
        <JeanAI />

    </main>
</div>

@code {
    private bool isDarkMode = false;
    private bool showCvModal = false;
    private bool showCertsModal = false;
    private bool viewingCert = false;
    private string? activePdfPath;
    private readonly string cvPath = "/assets/resume.pdf";

    private List<CertificationItem> certs = new()
{
new("AZ-900: Microsoft Azure Fundamentals", "/assets/certs/az-900-thumb.png", "/assets/certs/az-900.pdf"),
new("AZ-204: Developing Solutions for Microsoft Azure", "/assets/certs/az-204-thumb.png", ""),
new("C-Sharp .NET: Fullstack .NET Bootcamp", "/assets/certs/c-shart.net-core.png",
"/assets/certs/c-shart.net-core.pdf"),
};

    private CertificationItem? selectedCert;
    private string CertsModalTitle => viewingCert && selectedCert is not null ? selectedCert.Title : "Certifications";
    private readonly string skillsoftWalletUrl =
    "https://skillsoft.digitalbadges.skillsoft.com/profile/fredneljeanjoseph168496/wallet";

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Check if dark mode preference is stored
            var darkModePreference = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "darkMode");
            isDarkMode = darkModePreference == "true";

            if (isDarkMode)
            {
                await JSRuntime.InvokeVoidAsync("document.body.classList.add", "dark-mode");
            }

            StateHasChanged();
        }
    }

    private async Task ToggleDarkMode()
    {
        isDarkMode = !isDarkMode;

        // Store preference in localStorage
        await JSRuntime.InvokeVoidAsync("localStorage.setItem", "darkMode", isDarkMode.ToString().ToLower());

        // Toggle dark mode class on body
        if (isDarkMode)
        {
            await JSRuntime.InvokeVoidAsync("document.body.classList.add", "dark-mode");
        }
        else
        {
            await JSRuntime.InvokeVoidAsync("document.body.classList.remove", "dark-mode");
        }
    }

    private void ShowCvModal()
    {
        activePdfPath = cvPath;
        showCvModal = true;
        StateHasChanged();
    }

    private void CloseCvModal()
    {
        showCvModal = false;
        activePdfPath = null;
        StateHasChanged();
    }

    private void ShowCertsModal()
    {
        showCertsModal = true;
        viewingCert = false;
        selectedCert = null;
        StateHasChanged();
    }

    private void CloseCertsModal()
    {
        showCertsModal = false;
        viewingCert = false;
        selectedCert = null;
        StateHasChanged();
    }

    private void SelectCert(CertificationItem item)
    {
        selectedCert = item;
        viewingCert = true;
        StateHasChanged();
    }

    private void BackToCertsGrid()
    {
        viewingCert = false;
        selectedCert = null;
        StateHasChanged();
    }

    private record CertificationItem(string Title, string ThumbPath, string PdfPath);

    // Back to top moved next to JeanAI trigger in JeanAI component
}