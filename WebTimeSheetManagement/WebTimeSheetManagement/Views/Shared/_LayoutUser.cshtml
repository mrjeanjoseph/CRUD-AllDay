<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title></title>
    <link href="~/Template/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Template/vendor/metisMenu/metisMenu.min.css" rel="stylesheet">
    <link href="~/Template/dist/css/sb-admin-2.css" rel="stylesheet">
    <link rel="shortcut icon" href="../favicon.ico" type="image/x-icon">
    <link href="~/Scripts/datetimepicker/jqueryui.css" rel="stylesheet" />
    <link href="~/Content/Validation.css" rel="stylesheet" />
    <link href="~/Content/toastr.css" rel="stylesheet" />
    <link href="~/Template/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
</head>

<body>
    @inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
    @{ string uname = ""; if (HttpContextAccessor.HttpContext?.Session != null && HttpContextAccessor.HttpContext.Session.TryGetValue("Username", out var ubytes)) { uname = System.Text.Encoding.UTF8.GetString(ubytes); } }
    <div id="wrapper">
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">TIME MANAGER</a>
            </div>
            <ul class="nav navbar-top-links navbar-right">
                <li class="dropdown">Hi @uname !</li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#"><i class="fa fa-user fa-fw"></i> <i class="fa fa-caret-down"></i></a>
                    <ul class="dropdown-menu dropdown-user">
                        <li><a href="/Login/Logout"><i class="fa fa-sign-out fa-fw"></i> Logout</a></li>
                    </ul>
                </li>
            </ul>
            <div class="navbar-default sidebar" role="navigation">
                <div class="sidebar-nav navbar-collapse">
                    <ul class="nav" id="side-menu">
                        <li><a href="/User/Dashboard"><i class="fa fa-clock-o fa-fw"></i> Dashboard</a></li>
                        <li><a href="/TimeSheet/Add"><i class="fa fa-dashboard fa-fw"></i> TimeSheet</a></li>
                        <li><a href="/AllTimeSheet/TimeSheet"><i class="fa fa-edit fa-fw"></i> All TimeSheet</a></li>
                        <li><a href="/Expense/Add"><i class="fa fa-edit fa-fw"></i>Expense</a></li>
                        <li><a href="/AllExpense/Expense"><i class="fa fa-table fa-fw"></i> AllExpense</a></li>
                        <li><a href="/UserProfile/ChangePassword"><i class="fa fa-table fa-fw"></i> Change Password</a></li>
                    </ul>
                </div>
            </div>
        </nav>
        <div id="page-wrapper">
            <div class="row">
                <script src="~/Scripts/datetimepicker/jquery-1.12.4.js"></script>
                <script src="~/Template/vendor/bootstrap/js/bootstrap.min.js"></script>
                <script src="~/Scripts/jquery.validate.min.js"></script>
                <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
                <script src="~/Scripts/datetimepicker/jqueryui.js"></script>
                <script src="~/Scripts/toastr.min.js"></script>
                @RenderBody()
            </div>
        </div>
    </div>
</body>

</html>
